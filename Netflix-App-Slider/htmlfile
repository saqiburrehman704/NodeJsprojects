    <style>
        h1{font-size: 30px; text-transform: uppercase ; letter-spacing: 2px;text-align: center;text-shadow: khaki;}
        .container{
            
            
            background: linear-gradient(70deg, #FFC0CB 50% 50% , #00FFFF 50%);
            
        }
        .main-div{
            width: 100vw;
            height: 100vh;
            background-color: hsl(206, 21%, 94%);
            display: grid;
            place-items: center;
        }

        .center_div{
            width: 100%;
            overflow-y: hidden;
            overflow-x: scroll;
            display: flex;
        }

         img{
            padding: 20px;
           border-radius: 30px;
           transition: transform 0.3s ease-in;
        }

        

        img:hover
        {

            transform: scale(1.1);
        }
        .center_div::-webkit-scrollbar{
            overflow: hidden;
        }
       
        
    </style>
        
    <script>

        const centerdiv = document.getElementById("centerdiv");

        fetch("https://jsonplaceholder.typicode.com/photos?_limit=20").then((data)=>{
            return (data.json());
        }).then((jsondata)=>{
            jsondata.map((val)=>{
                key = val.id;
                let img = document.createElement("img");
                img.src = `https://picsum.photos/200/300?random=${val.id}`;
                centerdiv.append(img);
                console.log(val.url);
            });
        }).catch((err)=>{
            console.log(err);
        })
    </script>

